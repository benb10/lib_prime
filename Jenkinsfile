pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                python --version
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                python --version
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                python --version
            }
        }
    }
}
